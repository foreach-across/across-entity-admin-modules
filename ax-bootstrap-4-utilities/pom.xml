<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>across-entity-admin-modules</artifactId>
        <groupId>com.foreach.across.modules</groupId>
        <version>${revision}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ax-bootstrap-4-utilities</artifactId>
    <name>${project.groupId}:${project.artifactId}</name>
    <description>Across Bootstrap 4 Utilities</description>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Foreach</name>
            <organization>Foreach</organization>
            <organizationUrl>https://www.foreach.be</organizationUrl>
        </developer>
    </developers>

    <repositories>
        <repository>
            <id>across</id>
            <name>Across Repository</name>
            <url>https://repository.antwerpen.io-external.com/nexus/repository/public/</url>
        </repository>
    </repositories>

    <properties>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <sonar.skip>true</sonar.skip>
        <maven.deploy.skip>false</maven.deploy.skip>
    </properties>


    <build>
        <plugins>
            <plugin>
                <!-- This defines how a specific module will be flattened -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <pomElements>
                        <name>keep</name>
                        <description>resolve</description>
                        <developers>resolve</developers>
                        <scm>resolve</scm>
                        <url>resolve</url>
                    </pomElements>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>