{
  "name": "@foreachbe/bootstrap-ui-fe",
  "version": "0.0.1",
  "main": "dist/bootstrapui.umd.production.js",
  "typings": "dist/bootstrapui.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "yarn build",
    "start": "foreach-tsdx watch -i src/bootstrapui-formelements.ts -i src/bootstrapui.ts --format umd -g autosize=autosize,moment=moment,jquery=jQuery",
    "build": "foreach-tsdx build -i src/bootstrapui-formelements.ts -i src/bootstrapui.ts --format umd -g autosize=autosize,moment=moment,jquery=jQuery",
    "build-jar": "foreach-tsdx build -i src/bootstrapui-formelements.ts -i src/bootstrapui.ts --format umd -g autosize=autosize,moment=moment,jquery=jQuery && node build-jar",
    "build-test": "tsc -p tsconfig.json && rollup -i src/bootstrapui-formelements.ts -i src/bootstrapui.ts --format umd -g autosize=autosize,moment=moment,jquery=jQuery && node build-jar",
    "test": "foreach-tsdx test --env=jsdom",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "release": "np"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "peerDependencies": {
    "autosize": "3.x",
    "jquery": "1.x",
    "moment": "2.x",
    "react": ">=16"
  },
  "np": {
    "anyBranch": true,
    "releaseDraft": false
  },
  "husky-disabled": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "@foreachbe/eslint-config-react-app"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-info": "5.1.10",
    "@storybook/addon-links": "^5.1.10",
    "@storybook/addons": "^5.1.10",
    "@storybook/react": "^5.1.10",
    "@testing-library/react": "^8.0.8",
    "@types/autosize": "^3.0.6",
    "@types/jest": "^24.0.17",
    "@types/jquery": "^3.3.31",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.8.25",
    "@types/react-dom": "^16.8.5",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__addon-links": "^3.3.5",
    "@types/storybook__react": "4.0.2",
    "autosize": "^3.0.20",
    "awesome-typescript-loader": "5.2.1",
    "babel-eslint": "10.x",
    "babel-loader": "^8.0.6",
    "foreach-tsdx": "^1.0.0",
    "husky": "^3.0.2",
    "jest-dom": "^4.0.0",
    "jquery": "1.11.3",
    "lint-staged": "^9.2.1",
    "moment": "^2.13.0",
    "np": "^5.0.3",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  }
}
